    <ul class="w-3/4 mx-auto">
      <% @users.each do |user| %>
        <a href="<%= user_path(user) %>" class="flex items-center mb-2">  
          <div class="h-20 w-20 border-2 border-black m-4"><%= image_tag(user.photo) %> </div>
          <div class="w-2/4 text-4xl flex flex-col border-2 border-black p-2">
            <p><%= user.name %></p>
            <p class="text-sm text-right">Number of posts <%= user.posts_counter %>
              <p>
              </div>
            </a>
          <% end %>
        </ul>

